<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
  <appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
        <syslogHost>apu.gsi.dit.upm.es</syslogHost>
        <facility>LOCAL0</facility>
        <suffixPattern>calistabot: %logger %msg</suffixPattern>
    </appender>
  <logger name="org.apache.solr" level="INFO" additivity="false">
    <appender-ref ref="STDOUT" />
  </logger>
  <logger name="org.sindice.siren" level="INFO" additivity="false">
    <appender-ref ref="STDOUT" />
  </logger>
  <logger name="es.upm.dit.gsi.siren" level="DEBUG" additivity="false">
    <appender-ref ref="STDOUT" />
  </logger>
  <!--  This shouldn't be necessary, should it? -->
  <logger name="es.upm.dit.gsi.siren.demo.gsiweb.WebProjectsDemo" level="DEBUG" additivity="false">
    <appender-ref rel="STDOUT" />
  </logger>
  <root level="DEBUG">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>